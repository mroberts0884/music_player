# File name: Musicplayer.py
#:kivy 2.3.0

#play, stop, and pause button
<MyBoxLayout>
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: root.width, root.height
        padding: 20
        spacing: 20

        Image:
            source: 'Multimedia_(117).jpg'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.8 , 0.75)
            background_color: 255, 255, 255
            

        Button:
            size_hint: (None, None)
            size: (100, 100)
            background_color: 0,0,0,0
            pos_hint: {'center_x': 0.4}
            on_press: root.play()
            #on_release: root.hello_off()
                
            Image:
                source: "C:/Users/mrobe/OneDrive/Documents/music player/play-button-icon-png-18904.png"
                center_x:self.parent.center_x
                
        Button:
            background_color: 0,0,0,0
            size_hint: (None, None)
            size: (40, 40)
            pos_hint: {'center_x': 0.7}
            on_press: root.stop()
               
            #on_release: root.hello_off()

            Image:
                id: stop_button
                source: "music-stop-icon-39453.png"
                center_x:self.parent.center_x
                